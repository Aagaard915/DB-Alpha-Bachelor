 <launch>
 <group ns="morf_hw">
	 <arg name="device_name"                default="/dev/ttyUSB0"/>
	 <arg name="baud_rate"                  default="4000000"/>

	 <arg name="scan_range"                 default="80"/>

	 <arg name="profile_velocity"           default="500"/>
	 <arg name="profile_acceleration"       default="500"/>

	 <param name="device_name"              value="$(arg device_name)"/>
	 <param name="baud_rate"                value="$(arg baud_rate)"/>

	 <param name="scan_range"               value="$(arg scan_range)"/>

	 <param name="profile_velocity"         value="$(arg profile_velocity)"/>
	 <param name="profile_acceleration"     value="$(arg profile_acceleration)"/>

	 <node name="dynamixel_driver" pkg="dynamixel_workbench_controllers" type="position_control" required="true" output="screen"/>
 </group>
 </launch>
